{
  "name": "novellia-backend",
  "version": "1.0.0",
  "description": "Backend server for Novellia takehome",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch server.ts",
    "db:generate": "tsx --import tsx node_modules/.bin/drizzle-kit generate",
    "db:migrate": "tsx --import tsx node_modules/.bin/drizzle-kit migrate",
    "db:push": "tsx --import tsx node_modules/.bin/drizzle-kit push",
    "db:seed": "tsx db/seed.ts"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/sqlite3": "^3.1.11",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  }
}
